    'weight' => 5,
    'context' => MENU_CONTEXT_PAGE | MENU_CONTEXT_INLINE,
    'file' => 'commerce_braintree.admin.inc',
  );
  
  $items['braintree/%commerce_braintree_plan/uid/%/cancel'] = array(
    'title' => 'Cancel braintree recurring billing',
    'load arguments' => array(3),
    'page callback' => 'commerce_braintree_page_cancel',
    'page arguments' => array(1),
    'access callback' => 'commerce_braintree_page_cancel_access',
    'access arguments' => array(1), 
    'type' => MENU_CALLBACK,
    'file' => 'commerce_braintree.admin.inc',
  );
