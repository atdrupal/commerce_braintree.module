 */
function commerce_braintree_plan_load($plan_id, $uid) {
  if (!$plan_id || !$uid) {
    return FALSE;
  }
  $sub = array("planid" => $plan_id, "uid" => $uid);
  return $sub;
}

/**
 * Implementation of hook_cb_subscription_went_active()
 */
function commerce_braintree_cb_subscription_went_active($kind, $sid) {
  $sub    = commerce_braintree_subscription_get_by_id($sid);
  $cus    = commerce_braintree_customer_get_by_token($sub->token);
  $orders = commerce_braintree_get_orders_by_uid($cus);
  foreach ($orders as $id) {
    $order = commerce_order_load($order);
    $plan  = commerce_braintree_planid_get($order);
    if ($plan) {
      commerce_order_status_update($order,"completed");
      break;
    }
  }
}

/**
 * get orders by uid
 * @param type $uid
 * @return boolean
 */
function commerce_braintree_get_orders_by_uid($uid) {
  $select = db_select('commerce_order', 'c')
            ->fields('c', array('order_id', 'uid'))
            ->condition('uid', $uid)
            ->execute();
  if(!$select ) {
    return FALSE;
  }
  $orders = array();
  foreach( $select as $row ) {
    $orders[] = $row->order_id;
  }
}