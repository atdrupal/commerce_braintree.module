  $items[$payment['settings']['webhook_link']] = array(
    'title' => 'Trigger occurs form braintree',
    'page callback' => 'commerce_braintree_hooks',
    'access arguments' => array('access content'), 
    'type' => MENU_CALLBACK,
    'file' => 'commerce_braintree.admin.inc',
  );
  return $items;
}

