/**
 * Check plan by id
 * @param type $plan_id
 * @return boolean
 */
function commerce_braintree_plan_check($plan_id) {
  //Initializes the Braintree Library
  commerce_braintree_initialize_library();
  //get list plan
  $plans = Braintree_Plan::all();
  foreach ($plans as $plan) {
    if ($plan->id == $plan_id)      return TRUE;
  }
  return FALSE;
}

