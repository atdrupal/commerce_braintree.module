}

function commerce_braintree_token_get_by_creditcard($card_number, $cid) {
  //Initializes the Braintree Library
  $load = commerce_braintree_initialize_library();
  if ($load == FALSE) {    
    return FALSE;  
  }
  $bin = substr($card_number, 0, 6);
  $last4 = substr($card_number, strlen($card_number)-4, strlen($card_number)-1);
  try {
    $collection1 = Braintree_Customer::search(array(
      Braintree_CustomerSearch::creditCardNumber()->startsWith($bin)
    ));
    $collection2 = Braintree_Customer::search(array(
      Braintree_CustomerSearch::creditCardNumber()->endsWith($last4)
    ));
    $customers = array_intersect($collection1->_ids, $collection2->_ids);
    if (!in_array($cid, $customers)) {
      return FALSE;
    }
    $customer = commerce_braintree_customer_get($cid);
    foreach ($customer->creditCards as $credit_cards) {
      if ($credit_cards->bin == $bin && $credit_cards->last4 == $last4) {
        return $credit_cards->token;
      }
    }
  } catch (Exception $e) {
    //we have a not found exception!
    $customers = FALSE;
  }
  return FALSE;
}



/**
 * Get customer by token
 * @param type $token
 * @return boolean
 */
function commerce_braintree_customer_get_by_token($token) {
  //Initializes the Braintree Library
  $load = commerce_braintree_initialize_library();
  if ($load == FALSE) {    
    return FALSE;  
  }
  try {
    $customer = Braintree_Customer::search(array(
      Braintree_CustomerSearch::paymentMethodToken()->is($token)
    ));
  } catch (Exception $e) {
    //we have a not found exception!
    $customer = FALSE;
  }
  return $customer->_ids[0];
}

