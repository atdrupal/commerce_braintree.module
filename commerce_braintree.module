/**
 * Check grant to access cancel recurring billing page
 * @global type $user
 * @param type $sub
 * @return boolean
 */
function commerce_braintree_subscription_cancel_access($pid) {
  $sub = commerce_braintree_subscription_get_by_pid($pid);
  if ($sub == FALSE) {
    return FALSE;
  }
  if (user_access('cancel any user')) {
    return TRUE;
  }
  if ($GLOBALS['user']->uid == $sub['uid'] && user_access('cancel own user')) {
    return TRUE;
  }
  return FALSE;
}

